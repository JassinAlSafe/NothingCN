{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nothingcn.com/schema/registry.json",
  "title": "NothingCN Registry Schema",
  "description": "Schema for NothingCN component registry",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "description": "Registry identifier"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Registry homepage URL"
    },
    "items": {
      "type": "array",
      "description": "Array of registry items",
      "items": {
        "$ref": "https://nothingcn.com/schema/registry-item.json"
      }
    }
  },
  "required": ["name", "items"],
  "additionalProperties": false
}