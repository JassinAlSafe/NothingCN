      },
      "cssVars": {
        "light": {},
        "dark": {}
      },
      "categories": ["components", "ui", "navigation"],
      "docs": "/components/tabs"
    },
    {
      "name": "banner",
      "type": "registry:ui",
      "title": "Banner",
