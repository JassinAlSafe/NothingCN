          "type": "registry:component",
          "target": "components/ui/button.tsx"
        }
      ],
      "dependencies": [
        "@radix-ui/react-slot",
        "class-variance-authority"
      ],
      "registryDependencies": [
        "utils"
      ],
      "tailwind": {
        "config": {}
      },
      "cssVars": {
        "light": {},
        "dark": {}
      },
      "categories": ["components", "ui"],
      "docs": "/components/button"
    },
    {
      "name": "utils",
      "type": "registry:lib",
      "title": "Utils",
      "description": "Utility functions including cn for class merging.",
      "files": [
        {
          "path": "default/lib/utils.ts",
          "type": "registry:lib",
          "target": "lib/utils.ts"
        }
      ],
      "dependencies": [
        "clsx",
        "tailwind-merge"
      ]
    },
    {
      "name": "tabs",
